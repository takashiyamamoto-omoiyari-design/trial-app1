<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/trial-app1/css/site.css?v=1.1" />
    <link rel="stylesheet" href="/trial-app1/css/chat-style.css?v=1.1" />
    <link rel="stylesheet" href="/trial-app1/css/reinforcement-learning.css?v=1.0" />
    <link rel="stylesheet" href="/trial-app1/css/data-structuring.css?v=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body>
    <!-- サイドバー -->
    <div class="sidebar" id="sidebar" style="background-color: #ffffff !important;">
        <div class="sidebar-toggle" id="sidebar-toggle" style="background-color: #ffffff !important; color: #333333 !important;">
            <i class="fas fa-chevron-left" id="toggle-icon"></i>
        </div>
        <a href="@Url.Content("~/")" class="sidebar-logo" style="text-decoration: none; color: inherit;">
                            <img src="/trial-app1/images/ilu-logo.png" alt="Logo" />
            <span class="sidebar-logo-text">データ構造化</span>
        </a>
        <button class="sidebar-clear-chat" id="clear-chat-button" style="margin-top:20px;">
            <i class="fas fa-trash"></i>&nbsp;チャットを消す
        </button>
        <div class="sidebar-menu">
            <!-- サイドバーメニュー項目はJavaScriptで動的に構築されます -->
        </div>
    </div>

    <!-- メインコンテンツ -->
    <div class="main-content" id="main-content">
        <main role="main" class="container">
            @RenderBody()
        </main>
    </div>

    <script src="/trial-app1/js/shared/sidebar-navigation.js" asp-append-version="true"></script>
    <script src="/trial-app1/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
