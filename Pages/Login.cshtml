@page
@model AzureRag.Pages.LoginModel
@{
    ViewData["Title"] = "ILUデータ構造化ソリューション";
    Layout = null;
}
<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            line-height: 1.5;
            color: #333;
            background-color: #f9fafb;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-container {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 480px;
            padding: 2rem;
            text-align: center;
        }

        .login-logo {
            margin-bottom: 2rem;
        }

        .login-title {
            font-size: 1.5rem;
            font-weight: 500;
            margin-bottom: 2rem;
        }

        .login-form {
            text-align: left;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
        }

        .form-input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #e5e7eb;
            border-radius: 6px;
            outline: none;
        }

        .form-input:focus {
            border-color: #3389ca;
            box-shadow: 0 0 0 3px rgba(51, 137, 202, 0.2);
        }

        .login-button {
            width: 100%;
            padding: 0.75rem;
            background-color: #3389ca;
            color: white;
            border: none;
            border-radius: 6px;
            font-weight: 500;
            cursor: pointer;
            transition: background-color 0.2s;
        }

        .login-button:hover {
            background-color: #2c78b3;
        }

        .error-message {
            color: #ef4444;
            margin-bottom: 1rem;
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-logo">
            <img src="data:image/svg+xml;base64," alt="ILUロゴ" width="48" height="64" />
        </div>
        <h1 class="login-title">ILUデータ構造化ソリューション</h1>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-message">@Model.ErrorMessage</div>
        }
        
        <form method="post" class="login-form">
            <div class="form-group">
                <label class="form-label">ユーザー名</label>
                <input type="text" name="Username" class="form-input" placeholder="ユーザー名を入力" required>
            </div>
            <div class="form-group">
                <label class="form-label">パスワード</label>
                <input type="password" name="Password" class="form-input" placeholder="パスワードを入力" required>
            </div>
            <button type="submit" class="login-button">ログイン</button>
        </form>
    </div>
</body>
</html> 